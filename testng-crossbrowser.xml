<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Cross-Browser Test Suite" parallel="tests" thread-count="4" verbose="1">
    <parameter name="environment" value="qa" />
    
    <test name="Chrome Browser Tests" enabled="true">
        <parameter name="browser" value="chrome" />
        <classes>
            <class name="testCases.LoginPageTest" />
            <class name="testCases.OneWayTest" />
            <class name="testCases.ReturnWayTest" />
        </classes>
    </test>

    <test name="Firefox Browser Tests" enabled="true">
        <parameter name="browser" value="firefox" />
        <classes>
            <class name="testCases.LoginPageTest"  />
            <class name="testCases.OneWayTest" />
            <class name="testCases.ReturnWayTest" />
        </classes>
    </test>

    <test name="Edge Browser Tests" enabled="true">
        <parameter name="browser" value="edge" />
        <classes>
            <class name="testCases.LoginPageTest" />
            <class name="testCases.OneWayTest" />
            <class name="testCases.ReturnWayTest" />
        </classes>
    </test>

    <test name="Safari Browser Tests" enabled="true">
        <parameter name="browser" value="safari" />
        <classes>
            <class name="testCases.LoginPageTest" />
            <class name="testCases.OneWayTest" />
            <class name="testCases.ReturnWayTest" />
        </classes>
    </test>
</suite>