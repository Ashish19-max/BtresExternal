<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Parallel Execution Suite" parallel="tests" thread-count="3" verbose="1">
    <parameter name="environment" value="qa" />
    <parameter name="browser" value="chrome" />
    
    <test name="Login Tests" parallel="methods" thread-count="2">
        <classes>
            <class name="testCases.LoginPageTest" />
        </classes>
    </test>

    <test name="OneWay Flight Tests">
        <classes>
            <class name="testCases.OneWayTest" />
        </classes>
    </test>

    <test name="Return Flight Tests">
        <classes>
            <class name="testCases.ReturnWayTest" />
        </classes>
    </test>

    <test name="Multiple Passenger Tests">
        <classes>
            <class name="testCases.ScenarioMultiplePassengerTest" />
        </classes>
    </test>
</suite>